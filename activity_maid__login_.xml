<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maid__login_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appstone.www.securegateapp3.Maid_Login_Activity"
    android:background="@drawable/apartment">

    

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Maid's Id or No"
        android:ems="10"
        android:id="@+id/maidsidorno"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Owners House No"
        android:ems="10"
        android:layout_marginTop="78dp"
        android:id="@+id/ownershouseno"
        android:layout_below="@+id/maidsidorno"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ownershouseno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:id="@+id/submit" />
</RelativeLayout>
